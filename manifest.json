{
  "manifest_version": 3,
  "name": "Workday Auto-Fill (React + TS)",
  "version": "1.0.0",
  "description": "Auto-fill Workday job applications using JSON data with random fallbacks.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "*://*.myworkdayjobs.com/*",
    "*://*.workday.com/*",
    "*://*/workday/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Workday Auto-Fill",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.myworkdayjobs.com/*",
        "*://*.workday.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
